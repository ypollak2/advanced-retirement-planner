# Security scanner exclusions for legitimate patterns

# Exclude scanner's own code
lib/
scripts/secret-scanner.js
scripts/credential-scanner.js

# Exclude archived security scanner files (false positives from reorganization)
.archive/temp-files/.credential-scanner.json
.archive/temp-files/qa-security-report.json
.archive/temp-files/error-analysis-report.json

# Exclude package.json security script references (not actual credentials)
package.json:*security:scan*
package.json:*secret-scanner*
package.json:*credential-scanner*

# Exclude cryptocurrency UI terminology (crypto assets, not auth tokens)
**/CryptoPortfolioInput.js:*token*
**/CryptoPortfolioInput.js:*Token*
**/WizardStepSavings.js:*Token Selection*
**/SavingsSummaryPanel.js:*DigitalAssetToken*
src/components/shared/CryptoPortfolioInput.js:*token*
src/components/shared/CryptoPortfolioInput.js:*Token*

# Exclude defensive string concatenation in scanner code
lib/core/analyzer.js:*api_*key*
lib/core/analyzer.js:*private_*key*
lib/core/analyzer.js:*access_*token*

# Exclude rule definitions (the scanner's own patterns)
lib/config/rule-definitions.js:*aws_secret_access_key*
lib/config/rule-definitions.js:*access_token*production*
lib/config/rule-definitions.js:*access*token*
lib/config/rule-definitions.js:*refresh*token*
lib/config/rule-definitions.js:*client*secret*
lib/config/rule-definitions.js:*(secret|password|pass|pwd|key|token)*

# Allow i18n translation keys
**/multiLanguage.js:*token*:*
**/multiLanguage.js:*key*:*
**/multiLanguage.js:*password*:*

# Allow legitimate UI field names in crypto components (digital assets, not auth)
**/CryptoPortfolioInput.js:tokenField
**/CryptoPortfolioInput.js:assetToken
**/CryptoPortfolioInput.js:selectToken
**/CryptoPortfolioInput.js:handleTokenChange
src/components/shared/CryptoPortfolioInput.js:*assetToken*
src/components/shared/CryptoPortfolioInput.js:*tokenField*
src/components/shared/CryptoPortfolioInput.js:*handleTokenChange*

# Allow legitimate crypto asset references with context
src/components/shared/CryptoPortfolioInput.js:*assetToken*BTC*
src/components/shared/CryptoPortfolioInput.js:*assetToken*ETH*
src/components/shared/CryptoPortfolioInput.js:*1*${assetToken}*=*
{
  "scanner": {
    "enableAstAnalysis": true,
    "minimumEntropyThreshold": 3.5,
    "maxFileSize": 10485760,
    "timeout": 5000,
    "concurrency": 5
  },
  "files": {
    "include": ["**/*.js", "**/*.json", "**/*.ts", "**/*.tsx"],
    "exclude": [
      "node_modules/**",
      "lib/**",
      "scripts/secret-scanner.js",
      "scripts/credential-scanner.js",
      ".cred*/**",
      "**/.cred*",
      ".archive/**",
      "tests/**",
      "docs/**",
      "**/rule-definitions.js",
      "**/analyzer.js",
      "**/CryptoPortfolioInput.js",
      "**/DigitalAssetPortfolioInput.js"
    ]
  },
  "reporting": {
    "format": "console",
    "minimumSeverity": "medium",
    "includeLineContent": true,
    "includeContext": true
  },
  "filters": {
    "cryptoContextFiltering": true,
    "uiComponentFiltering": true,
    "i18nFiltering": true,
    "configFileFiltering": true,
    "fintech_portfolio_filtering": true,
    "scanner_infrastructure_filtering": true,
    "cryptocurrency_asset_filtering": true
  },
  "cryptoAssetTerms": [
    "crypto", "bitcoin", "btc", "ethereum", "eth", "asset", "portfolio", 
    "digital", "coin", "currency", "wallet", "trading", "investment",
    "token_type", "asset_type", "crypto_asset", "digital_asset",
    "DigitalAsset", "CryptoPortfolio", "tokenField", "assetToken", 
    "digitalAssetToken", "DigitalAssetToken", "handleToken"
  ],
  "scannerInfrastructureTerms": [
    "rule-definitions", "analyzer", "secret-scanner", "credential-scanner",
    "pattern", "regex", "detection", "security", "oauth", "api_key"
  ]
}
{
  "scanner": {
    "enableAstAnalysis": true,
    "minimumEntropyThreshold": 3.5,
    "maxFileSize": 10485760,
    "timeout": 5000,
    "concurrency": 5
  },
  "files": {
    "include": ["**/*.js", "**/*.json", "**/*.ts", "**/*.tsx"],
    "exclude": [
      "node_modules/**",
      "lib/**",
      "scripts/secret-scanner.js",
      "scripts/credential-scanner.js",
      ".cred*/**",
      "**/.cred*",
      ".archive/**",
      "tests/**/*.js",
      "tests/**/*.json", 
      "**/test-config.js",
      "**/*test*.js",
      "**/*spec*.js",
      "**/deployment-readiness-report.json",
      "**/production-readiness-*.json",
      "**/.credential-scanner*.json",
      "docs/**",
      "README*.md",
      "CHANGELOG.md",
      "**/rule-definitions.js",
      "**/analyzer.js",
      "**/CryptoPortfolioInput.js",
      "**/DigitalAssetPortfolioInput.js",
      "**/crypto*.js",
      "**/digital-asset*.js"
    ]
  },
  "reporting": {
    "format": "console",
    "minimumSeverity": "medium",
    "includeLineContent": true,
    "includeContext": true
  },
  "filters": {
    "cryptoContextFiltering": true,
    "uiComponentFiltering": true,
    "i18nFiltering": true,
    "configFileFiltering": true,
    "fintech_portfolio_filtering": true,
    "scanner_infrastructure_filtering": true,
    "cryptocurrency_asset_filtering": true,
    "testing_context_filtering": true,
    "deployment_context_filtering": true,
    "low_entropy_filtering": true,
    "documentation_filtering": true
  },
  "cryptoAssetTerms": [
    "crypto", "bitcoin", "btc", "ethereum", "eth", "asset", "portfolio", 
    "digital", "coin", "currency", "wallet", "trading", "investment",
    "token_type", "asset_type", "crypto_asset", "digital_asset",
    "DigitalAsset", "CryptoPortfolio", "tokenField", "assetToken", 
    "digitalAssetToken", "DigitalAssetToken", "handleToken", "handleTokenChange",
    "selectToken", "portfolio_token", "cryptoToken", "tokenType", "token",
    "getDigitalAssetSymbol", "assetPrices", "handleTokenChange", "priceInfo",
    "tokenSelector", "tokenSelect", "currentPrice", "fiatValue"
  ],
  "testingTerms": [
    "test", "mock", "fake", "dummy", "sample", "spec", "fixture",
    "secret123", "abc123", "temp123", "userToken", "testToken",
    "sessionId", "tempAuth", "testPassword", "mockPassword",
    "test_secret", "fake_key", "dummy_token", "sample_auth"
  ],
  "deploymentTerms": [
    "deployment-readiness", "production-readiness", "build-report", 
    "security-scan", "audit-report", "readiness-report", "validation-report"
  ],
  "scannerInfrastructureTerms": [
    "rule-definitions", "analyzer", "secret-scanner", "credential-scanner",
    "pattern", "regex", "detection", "security", "oauth", "api_key",
    "vulnerability-test", "security-test", "test-framework"
  ]
}
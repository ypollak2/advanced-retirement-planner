{
  "scanner": {
    "enableAstAnalysis": true,
    "minimumEntropyThreshold": 3.5,
    "maxFileSize": 10485760,
    "timeout": 5000,
    "concurrency": 5
  },
  "files": {
    "include": ["**/*.js", "**/*.json", "**/*.ts", "**/*.tsx"],
    "exclude": [
      "node_modules/**",
      "lib/**",
      "scripts/secret-scanner.js",
      "scripts/credential-scanner.js",
      ".cred*/**",
      "**/.cred*",
      ".archive/**",
      "tests/**",
      "docs/**"
    ]
  },
  "reporting": {
    "format": "console",
    "minimumSeverity": "medium",
    "includeLineContent": true,
    "includeContext": true
  },
  "filters": {
    "cryptoContextFiltering": true,
    "uiComponentFiltering": true,
    "i18nFiltering": true,
    "configFileFiltering": true
  }
}
{
  "scanner": {
    "enableAstAnalysis": true,
    "minimumEntropyThreshold": 4.5,
    "maxFileSize": 10485760,
    "timeout": 5000,
    "concurrency": 5
  },
  "files": {
    "include": [
      "**/*.js",
      "**/*.json"
    ],
    "exclude": [
      "node_modules/**",
      "lib/**",
      "scripts/secret-scanner.js",
      "scripts/credential-scanner.js",
      ".cred*/**",
      "**/.cred*",
      "tests/**",
      "docs/**"
    ]
  }
}